pipeline {
   agent any
   tools { 
	maven 'maven 3.9.5'
	jdk 'jdk11'
	}
   

    stages {
        stage('checkout') {
            steps {
		sh '''
            git clone https://github.com/SamruddhiG-Github/game-of-life.git
	   cd game-of-life
		'''		
            }
        }
		stage('build') {
            steps {
                
            sh '''
		cd /home/ec2-user/game-of-life
		mvn clean install
		''' 

            }
        }
        stage('Deploy') {
            steps {
            sh ' cp game-of-life/gameoflife-web/target/gameoflife.war  /mnt/apache-tomcat-9.0.80/webapps ' 
			
            }
    }		

}
}
